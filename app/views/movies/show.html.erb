<header><%= @movie.name %></header>
<h3><%= @movie.creation_year %></h3>
<h3><%= @movie.genre %></h3>

<h2>Actors In This Movie:</h2>

<% @movie.actors_sorted.each do |actor| %>
  <p><%= link_to "#{actor.name}", "/actors/#{actor.id}" %>, age: <% actor.age %></p>
<% end %>

<h3>Average Age: <%= @movie.avg_age_of_actors %></h3>